<div class="search">
  <h1>Meemers</h1>

  <%= form_for :search, html: { class: "search-form" } do |f| %>
    <%= f.text_field :query, placeholder: "Try cats" %>
    <%= button_tag type: 'submit', class: "search-button" do %>
        <i class="fa fa-search"></i>
    <% end %>
  <% end %>
</div>

<div class="description">
  <p>Find, save, and rate your favorite memes</p>
</div>